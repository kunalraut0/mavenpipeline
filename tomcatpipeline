pipeline {
    agent any 
    stages {
        stage('pull') { 
            steps {
               git branch: 'main', url: 'https://github.com/kunalraut0/mavenpipeline.git'
            }
        }
        
        stage('build') { 
            steps {
              sh 'mvn clean package'
            }
        } 
        
        stage('test') { 
            steps {
                echo 'test successfulllll'
            }
        }
        
        stage('deploy') { 
            steps {
              deploy adapters: [tomcat9(credentialsId: 'tomcatuser', path: '', url: 'http://3.110.104.202:8080')], contextPath: '/', war: '**/*.war'
            }
        } 
    }
}    
            
