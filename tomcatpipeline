pipeline {
    agent any 
    stages {
        stage('pull') { 
            steps {
                git 'https://github.com/kunalraut0/kunal-maven-1.git'
            }
        }
        
        stage('build') { 
            steps {
               sh 'mvn clean install'
            }
        } 
        
        stage('test') { 
            steps {
                echo 'test successful'
            }
        }
        
        stage('deploy') { 
            steps {
               deploy adapters: [tomcat8(credentialsId: 'tomcat-user', path: '', url: 'http://172.31.38.151:8080')], contextPath: '/', war: '**/*.war'
            }
        } 
    }
}    
            
